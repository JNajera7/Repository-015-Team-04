<script>
    const categories = ['top', 'bottom', 'full_body', 'footwear', 'accessory', 'outerwear'];

    function randomize(category) {
        // Retrieve the box element based on the category
        const boxElement = document.getElementById(`${category}Box`);

        // Simulate fetching a random image URL from the database
        const randomImageURL = getRandomImageURLFromDatabase(category);

        // Update the background image of the box
        const imageElement = boxElement.querySelector('.image');
        imageElement.style.backgroundImage = `url('${randomImageURL}')`;
    }

    function randomizeAll() {
        categories.forEach(category => randomize(category));
    }

    function getRandomImageURLFromDatabase(category) {
        // Simulate fetching a random image URL from the database based on the category
        // Replace this implementation with your actual logic to retrieve random image URLs
        const imageUrlsByCategory = {
            top: ['path_to_image_from_database_for_top_1.jpg', 'path_to_image_from_database_for_top_2.jpg'],
            bottom: ['path_to_image_from_database_for_bottom_1.jpg', 'path_to_image_from_database_for_bottom_2.jpg'],
            full_body: ['path_to_image_from_database_for_full_body_1.jpg', 'path_to_image_from_database_for_full_body_2.jpg'],
            footwear: ['path_to_image_from_database_for_footwear_1.jpg', 'path_to_image_from_database_for_footwear_2.jpg'],
            accessory: ['path_to_image_from_database_for_accessory_1.jpg', 'path_to_image_from_database_for_accessory_2.jpg'],
            outerwear: ['path_to_image_from_database_for_outerwear_1.jpg', 'path_to_image_from_database_for_outerwear_2.jpg']
        };

        const randomIndex = Math.floor(Math.random() * imageUrlsByCategory[category].length);
        return imageUrlsByCategory[category][randomIndex];
    }

    randomizeAll();
</script>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Suggested Fits</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .category {
            margin-bottom: 20px;
        }
        .subcategory {
            margin-bottom: 10px;
        }
        .outfit-img {
            max-width: 100%;
            height: auto;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Suggested Fits</h1>

        <!-- Grid layout for categories -->
        <div id="categoriesContainer" class="row">
            <!-- Existing categories -->
            <!-- Formal, Athletic, Casual, Warm, Beach, Rain, Snow -->
            <!-- Formal -->
            <div class="col-md-6">
                <div class="category">
                    <h2>Formal</h2>
                    <div class="subcategory">
                        <h3 class="outfit-name" onclick="renameOutfit(this)">Enter outfit name</h3>
                        <img class="outfit-preview mt-2" src="https://via.placeholder.com/150" alt="Outfit Preview">
                    </div>
                </div>
            </div>
            <!-- Athletic -->
            <div class="col-md-6">
                <div class="category">
                    <h2>Athletic</h2>
                    <div class="subcategory">
                        <h3 class="outfit-name" onclick="renameOutfit(this)">Enter outfit name</h3>
                        <img class="outfit-preview mt-2" src="https://via.placeholder.com/150" alt="Outfit Preview">
                    </div>
                </div>
            </div>
            <!-- Casual -->
            <div class="col-md-6">
                <div class="category">
                    <h2>Casual</h2>
                    <div class="subcategory">
                        <h3 class="outfit-name" onclick="renameOutfit(this)">Enter outfit name</h3>
                        <img class="outfit-preview mt-2" src="https://via.placeholder.com/150" alt="Outfit Preview">
                    </div>
                </div>
            </div>
            <!-- Warm -->
            <div class="col-md-6">
                <div class="category">
                    <h2>Warm</h2>
                    <div class="subcategory">
                        <h3 class="outfit-name" onclick="renameOutfit(this)">Enter outfit name</h3>
                        <img class="outfit-preview mt-2" src="https://via.placeholder.com/150" alt="Outfit Preview">
                    </div>
                </div>
            </div>
            <!-- Beach -->
            <div class="col-md-6">
                <div class="category">
                    <h2>Beach</h2>
                    <div class="subcategory">
                        <h3 class="outfit-name" onclick="renameOutfit(this)">Enter outfit name</h3>
                        <img class="outfit-preview mt-2" src="https://via.placeholder.com/150" alt="Outfit Preview">
                    </div>
                </div>
            </div>
            <!-- Rain -->
            <div class="col-md-6">
                <div class="category">
                    <h2>Rain</h2>
                    <div class="subcategory">
                        <h3 class="outfit-name" onclick="renameOutfit(this)">Enter outfit name</h3>
                        <img class="outfit-preview mt-2" src="https://via.placeholder.com/150" alt="Outfit Preview">
                    </div>
                </div>
            </div>
            <!-- Snow -->
            <div class="col-md-6">
                <div class="category">
                    <h2>Snow</h2>
                    <div class="subcategory">
                        <h3 class="outfit-name" onclick="renameOutfit(this)">Enter outfit name</h3>
                        <img class="outfit-preview mt-2" src="https://via.placeholder.com/150" alt="Outfit Preview">
                    </div>
                </div>
            </div>
        </div>

        <!-- Button to add new category -->
        <button id="addCategoryBtn" class="btn btn-primary mt-4">Add Category</button>
    </div>

    <!-- Bootstrap JS and jQuery (needed for Bootstrap) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        // Function to add a new category
        function addCategory() {
            // Prompt user for category name
            var categoryName = prompt("Enter the name of the new category:");
            if (categoryName) {
                // Create new category div
                var newCategory = document.createElement("div");
                newCategory.className = "col-md-6";
                newCategory.innerHTML = `
                    <div class="category">
                        <h2>${categoryName}</h2>
                        <div class="subcategory">
                            <h3 class="outfit-name" onclick="renameOutfit(this)">Enter outfit name</h3>
                            <img class="outfit-preview mt-2" src="https://via.placeholder.com/150" alt="Outfit Preview">
                        </div>
                    </div>
                `;

                // Append new category to container
                document.getElementById("categoriesContainer").appendChild(newCategory);
            }
        }

        // Function to rename outfit
        function renameOutfit(element) {
            var newName = prompt("Enter the new name for the outfit:");
            if (newName) {
                element.textContent = newName;
            }
        }

        // Event listener for the add category button
        document.getElementById("addCategoryBtn").addEventListener("click", addCategory);
    </script>
</body>
</html>
